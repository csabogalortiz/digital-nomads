<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Profile</h1>
            <hr>
            <form action="/user/edit-user-profile" method="POST">
                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label"> Email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">
                        <div class="form-text">Required</div>
                    </div>
                    <div class="col">
                        <label for="pwdInput" class="form-label">Password</label>
                        <input type="password" class="form-control" id="pwdInput" name="userPwd" value="{{password}}">
                        <div class="form-text">Required</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Username</label>
                    <input type="text" class="form-control" id="usernameInput" name="username" value="{{username}}">
                    <div class="form-text">Required</div>
                </div>
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Add a Prolfile Picture</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg" value="{{profileImg}}">
                    <div class="form-text">Paste the URL of the picture you want to use.</div>
                </div>
                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Add a small Bio</label>
                    <textarea class="form-control" id="descriptionInput" rows="3"
                        name="description">{{description}}</textarea>
                    <div class="form-text">You can change or add to this later.</div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Edit</button>
                </div>
                <div class="d-grid gap-2">
                    <form action="/{{id}}/delete" method="POST" style="display: inline">
                        <input type="submit" value="Eliminar" class="btn btn-danger">
                    </form>
                </div>
            </form>
        </div>
    </div>
</div>