<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.8);">
        <div class="container d-flex align-items-center justify-content-center text-center h-100">
            <div class="text-white">
                <h1 class="mb-3">Welcome to the Digital Nomad World</h1>
                <h5 class="mb-4">Explore, add, connect.</h5>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <hr>
    <div class="container">
        <div class="row">
            {{#each places}}
            <div class="card" style="width: 18rem;">
                {{!-- <img class="card-img-top" src="{{profileImg}}" alt="Card image cap"> --}}
                <div class="card-body">
                    <img src="{{placeImg}}" alt="{{title}}">
                    <h3 class="card-title">{{name}}</h3>
                    <h4 class="card-title">Type: {{type}}</h4>
                </div>
                <a href="/places/details/{{id}}" class="btn btn-dark">Details</a>
                <div class="row">
                </div>
            </div>
            {{/each}}
        </div>